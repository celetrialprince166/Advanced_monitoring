# =============================================================================
# Terraform Variables Configuration
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored for security
# =============================================================================

# AWS Configuration
aws_region  = "eu-west-1"
environment = "dev"

# EC2 Configuration
instance_type      = "t3.small"
root_volume_size   = 20
allowed_ssh_cidr   = ["YOUR_IP/32"] # Change to your IP
allowed_http_cidr  = ["0.0.0.0/0"]

# GitHub Configuration
github_org  = "celetrialprince166"
github_repo = "Multi_Container_App"

# Monitoring
grafana_admin_password = "CHANGE_ME_STRONG_PASSWORD"
slack_webhook_url      = "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# =============================================================================
# Jenkins Credentials (Required)
# =============================================================================

# Database Credentials
db_username = "notesapp_admin"
db_password = "CHANGE_ME_STRONG_DB_PASSWORD"
db_name     = "notesdb"

# SonarCloud Token
sonarcloud_token = "YOUR_SONARCLOUD_TOKEN"

# Slack Bot Token for Jenkins
slack_token = "xoxb-YOUR-SLACK-BOT-TOKEN"
